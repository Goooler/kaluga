<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_permissions_bluetooth_check_manifest_declaration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Check manifest declaration"/>

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_permissions_bluetooth_check_support"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Check support"/>

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_permissions_bluetooth_check_permission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Check permission"/>

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_permissions_bluetooth_open_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open settings"/>

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_permissions_bluetooth_request_permissions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Request permissions"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>